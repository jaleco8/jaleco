{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["./components/*"],
      "@layouts/*": ["./layouts/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "extends": "astro/tsconfigs/strict"
}